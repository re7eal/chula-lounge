<h1>Listing ratings</h1>

<table>
  <thead>
    <tr>
      <th>Know rating</th>
      <th>Diff rating</th>
      <th>Grade rating</th>
      <th>Course</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ratings.each do |rating| %>
      <tr>
        <td><%= rating.know_rating %></td>
        <td><%= rating.diff_rating %></td>
        <td><%= rating.grade_rating %></td>
        <td><%= rating.course_id %></td>
        <td><%= rating.user_id %></td>
        <td><%= link_to 'Show', rating %></td>
        <td><%= link_to 'Edit', edit_rating_path(rating) %></td>
        <td><%= link_to 'Destroy', rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rating', new_rating_path %>
