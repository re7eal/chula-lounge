<h1>Listing trade_messages</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Trade</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @trade_messages.each do |trade_message| %>
      <tr>
        <td><%= trade_message.content %></td>
        <td><%= trade_message.user_id %></td>
        <td><%= trade_message.trade_id %></td>
        <td><%= link_to 'Show', trade_message %></td>
        <td><%= link_to 'Edit', edit_trade_message_path(trade_message) %></td>
        <td><%= link_to 'Destroy', trade_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

