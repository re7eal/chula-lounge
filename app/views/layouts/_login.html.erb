<div class="modal hide fade" id="login">
	<div class="modal-header">
		<button type="button" class="close fui-cross" data-dismiss="modal"
				aria-hidden="true"></button>
		<h3>Sign In</h3>
	</div>
	<div class="modal-body">
		<%= simple_form_for(:user, :url => user_session_path, :html => {:class => 'form-horizontal' }) do |f| %>
		<%= f.input :email, :autofocus => true %>
		<%= f.input :password %>
		<%= f.input :remember_me, :as => :boolean, :label => false, :inline_label => true if devise_mapping.rememberable? %>
		<%= link_to "Forgot your password?", new_password_path('user') %>
	</div>
	<div class="modal-footer">
		<%= f.button :submit, "Sign in", :class => 'btn btn-primary' %>
		<% end %>
	</div>
</div>