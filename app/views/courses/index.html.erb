<h3>Courses</h3>
<div class="span8">
<table class="table table-condensed">

  <thead>
    <tr>
      <th>Title</th>
      <th>Number</th>
      <th>Description</th>
      <th>Academic year</th>
      <th>Registered</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.number %></td>
        <td><%= course.description %></td>
        <td><%= course.year %></td>
        <td><%= course.created_at.to_date %></td>
         <td>
          <a href= ".." class="btn btn-mini" type="button">Edit</a>
        </td>
        <td><%= button_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } , class: :'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<a  href= "<%= pages_course_register_path %>" class="btn btn-mini" type="button">New Course</a>
